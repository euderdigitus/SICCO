@model SICCO.Database.tb_tipocombustivel

@{
    ViewBag.Title = "Editar";
}

<h3>Alteração do Combustível</h3>
@if (TempData["mensagemCerto"] != null)
{
    <div class="alert-success">
        @TempData["mensagemCerto"]
    </div>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            <div class="control-label col-md-2">
                <b>Combustível</b>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.tipoCombustivel)
                @Html.ValidationMessageFor(model => model.tipoCombustivel)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-warning" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>
