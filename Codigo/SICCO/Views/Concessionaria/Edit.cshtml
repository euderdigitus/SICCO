@model SICCO.Database.tb_empresa

@{
    
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_LayoutADM.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Alterar Concessionária</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">

            <h3>Alterar Concessionária</h3>
            @if (TempData["mensagemCerto"] != null)
            {
                <div class="alert-success">
                    @TempData["mensagemCerto"]
                </div>
            }
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.id)
    
            <div class="form-group">
                <div class="control-label col-md-2">
                    <b>Nome Fantasia</b>
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.nomeFantasia)
                    @Html.ValidationMessageFor(model => model.nomeFantasia)
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2">
                    <b>Cnpj</b>
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.cnpj)
                    @Html.ValidationMessageFor(model => model.cnpj)
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2">
                    <b>Status</b>
                </div>
                <div class="col-md-10">
                    @Html.DropDownList("status", new List<SelectListItem> { new SelectListItem { Text = "Ativo", Value = "Ativo" }, new SelectListItem { Text = "Inativo", Value = "Inativo" }}, new { @Style = "Width:500px;height:40px;", @class = "form-control input-lg" })
                    @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Salvar" class="btn btn-warning" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Voltar", "Index")
    </div>
</body>
</html>
