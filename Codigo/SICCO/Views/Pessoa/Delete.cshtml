@model SICCO.Database.tb_pessoa

@{
    ViewBag.Title = "Remover";
}

<h2>Remover</h2>

<h3>Tem certeza que deseja remover este cliente?</h3>
<div>
    @if (TempData["mensagemErro"] != null)
    {
        <div class="alert-danger">
            @TempData["mensagemErro"]
        </div>
    }
    <hr />
    <dl>
        <dt>
            <div class="control-label col-md-2">
                <b>Nome</b>
            </div>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nome)
        </dd>

        <dt>
            <div class="control-label col-md-2">
                <b>Sobre Nome</b>
            </div>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sobreNome)
        </dd>

        <dt>
            <div class="control-label col-md-2">
                <b>Cpf/Cnpj</b>
            </div>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cpfCnpj)
        </dd>

        <dt>
            <div class="control-label col-md-2">
                <b>RG</b>
            </div>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.rg)
        </dd>

        <dt>
            <div class="control-label col-md-2">
                <b>E-mail</b>
            </div>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt>
            <div class="control-label col-md-2">
                <b>Cidade</b>
            </div>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cidade)
        </dd>

        <dt>
            <div class="control-label col-md-2">
                <b>Estado</b>
            </div>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.estado)
        </dd>

        <dt>
            <div class="control-label col-md-2">
                <b>Cep</b>
            </div>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cep)
        </dd>

        <dt>
            <div class="control-label col-md-2">
                <b>Telefone</b>
            </div>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fone)
        </dd>

        <dt>
            <div class="control-label col-md-2">
                <b>Celular</b>
            </div>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.celular)
        </dd>

        <dt>
            <div class="control-label col-md-2">
                <b>Sexo</b>
            </div>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sexo)
        </dd>

        <dt>
            <div class="control-label col-md-2">
                <b>Data de Nascimento</b>
            </div>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nascimento)
        </dd>

        <dt>
            <div class="control-label col-md-2">
                <b>Endereço</b>
            </div>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.endereco)
        </dd>

    

        <dt>
            <div class="control-label col-md-2">
                <b>Pessoa</b>
            </div>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tb_tipopessoa.tipoPessoa)
        </dd>

       

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Remover" class="btn btn-danger" /> |
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>
