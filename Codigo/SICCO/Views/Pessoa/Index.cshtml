@model IEnumerable<SICCO.Database.tb_pessoa>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Clientes</h2>


<table class="table">
    <tr>
        <th>
            Nome
        </th>
        <th>
            Sobre Nome
        </th>
        <th>
            Cpf/Cnpjs
        </th>
        <th>
           Email
        </th>
        <th>
            Fone
        </th>
        <th>
           Celular
        </th>
        <th>
            Sexo
        </th>
        <th>
            Pessoa
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    
    
            if (item.sexo == "M")
            {
                item.sexo = "Masculino";
            }else
            {
                item.sexo = "Femino";
            }
    
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sobreNome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cpfCnpj)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.celular)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sexo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tb_tipopessoa.tipoPessoa)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalhe", "Details", new { id=item.id }) |
            @Html.ActionLink("Remover", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Novo", "Create")
</p>
