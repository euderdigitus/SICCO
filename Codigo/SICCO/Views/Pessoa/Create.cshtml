                        </div>
                </td>

                </tr>

            <tr>
                <td>

                    <div class="control-label col-md-2">
                        <b>RG</b>
                    </div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.rg, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.rg, "", new { @class = "text-danger" })
                    </div>  
                </td>
                <td>
                    <div class="control-label col-md-4">
                        <b>Cpf/Cnpj</b>
                    </div>
                    <div class="col-md-6">
