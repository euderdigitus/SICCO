@model SICCO.Database.tb_pessoa

@{
    ViewBag.Title = "Cadastro";
}

<h2>Novo Cadastro</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-inline" align ="justify">
        <table  border="0">
