                        <div class="col-md-1">
                            @Html.DropDownList("sexo", new List<SelectListItem> { new SelectListItem { Text = "Masculino", Value = "M" }, new SelectListItem { Text = "Feminino", Value = "F" } }, "Selecione", new { @Style = "Width:150px;height:40px;", @class = "form-control" })
