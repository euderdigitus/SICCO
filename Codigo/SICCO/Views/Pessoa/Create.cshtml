                        @Html.LabelFor(model => model.idTipoPessoa, "Pessoa", htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-8">
                            @Html.DropDownList("idTipoPessoa", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.idTipoPessoa, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
                <td>
                    <div class="control-label col-md-4">
                        <b>Data Nascimento</b>
                    </div>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.nascimento, new { htmlAttributes = new { @class = "form-control" } })dd/MM/aaaa
