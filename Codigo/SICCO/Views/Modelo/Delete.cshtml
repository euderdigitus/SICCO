@model SICCO.Database.tb_modelo

@{
    ViewBag.Title = "Remover";
}

<h2>Remover</h2>

<h3>Tem certeza que deseja remover este modelo?</h3>
<div>
    @if (TempData["mensagemErro"] != null)
    {
        <div class="alert-danger">
            @TempData["mensagemErro"]
        </div>
    }

    <hr />
    <dl class="dl-horizontal">
        <dt>
            <b>Categoria</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.categoiaModelo)
        </dd>

        <dt>
            <b>Tipo do Modelo:</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tipoModelo)
        </dd>

        <dt>
            <b>Modelo:</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descricao)
        </dd>

        <dt>
            <b>Ano/Modeo:</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.anoModelo)
        </dd>

        <dt>
            <b>Marca</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tb_marca.marca)
        </dd>

        <dt>
            <b>Combustível</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tb_tipocombustivel.tipoCombustivel)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Remover" class="btn btn-danger" /> |
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>
